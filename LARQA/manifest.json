{
  "name": "LARQA",
  "version": "1.0",
  "description": "LARQA",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "https://www.facebook.com/*",
        "https://www.gsp.ro/*",
        "https://www.nytimes.com/*",
        "https://nytimes.com/*"
      ],
      "js": [
        "popup.js"
      ],
      "run_at": "document_start"
    }
  ]
}