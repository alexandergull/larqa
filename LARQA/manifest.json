{
  "name": "LaRqA",
  "version": "1.0",
  "description": "Lazy Request Analyser",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "popup.js"
      ],
      "run_at": "document_start"
    }
  ]
}