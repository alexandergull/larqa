{
  "description": "LAzy Request Analyzer",
  "manifest_version": 2,
  "name": "LARQA",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/off.svg",
      "24": "icons/off.svg",
      "32": "icons/off.svg"
    }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts":
  [
    {
      "matches":["https://cleantalk.org/"],
      "js":["background.js"],
      "run_at": "document_start"
    }
  ]
}